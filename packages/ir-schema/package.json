{
  "name": "@gapjunction/ir-schema",
  "version": "0.1.0",
  "description": "Ajv JSON Schemas and TypeScript types for GapJunction's Intermediate Representation (IR)",
  "license": "MPL-2.0",
  "author": "GapJunction Team",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./src/schemas/*"
  },
  "files": [
    "dist/",
    "src/schemas/"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "dev:test": "vitest",
    "smoke": "tsc -p . && node dist/src/dev-smoke.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "json-schema",
    "ajv",
    "validation",
    "gapjunction",
    "ir"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
