{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gapjunction.dev/schemas/params.schema.json",
  "title": "GapJunction ParamValue",
  "description": "Allowed parameter value types for a Nexon instance: any JSON literal, or special tagged forms for secret refs and expressions.",
  "$defs": {
    "jsonValue": {
      "description": "Recursive JSON literal (string, number, boolean, null, array, or object).",
      "oneOf": [
        { "type": ["string", "number", "boolean", "null"] },
        {
          "type": "array",
          "items": { "$ref": "#/$defs/jsonValue" }
        },
        {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/jsonValue" }
        }
      ]
    },
    "secretToken": {
      "type": "object",
      "properties": {
        "secret": {
          "type": "object",
          "properties": {
            "type": { "const": "secretRef" },
            "ref": { "type": "string", "minLength": 1 }
          },
          "required": ["type", "ref"],
          "additionalProperties": false
        }
      },
      "required": ["secret"],
      "additionalProperties": false
    },
    "expressionToken": {
      "type": "object",
      "properties": {
        "expression": { "type": "string", "minLength": 1 }
      },
      "required": ["expression"],
      "additionalProperties": false
    }
  },
  "oneOf": [
    { "$ref": "#/$defs/secretToken" },
    { "$ref": "#/$defs/expressionToken" },
    {
      "allOf": [
        { "$ref": "#/$defs/jsonValue" },
        {
          "not": {
            "anyOf": [
              { "$ref": "#/$defs/secretToken" },
              { "$ref": "#/$defs/expressionToken" }
            ]
          }
        }
      ]
    }
  ]
}
